generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Category {
  School
  XI
  XII
  Special
}

enum Group {
  General
  Science
  Commerce
  Humanities
  Sports
  Library
  Guidance
  Admin
}

enum Positions {
  Lecturer
  AssistantProfessor
  Teacher
  AssistantTeacher
  Principal
  AssociateProfessor
  VicePrincipal
  Demonstrator
  Councellor
  Librarian
}

model Notice {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  date     String
  content  String
  category Category @default(Special)
}

model Event {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  imageUrl String
  title    String
  date     String
}

model Club {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  image String
  link  String
}

model Faculty {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  group   Group    @default(General)
  members Member[]
}

model Member {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  image     String
  position  Positions? @default(Lecturer)
  faculty   Faculty    @relation(fields: [facultyID], references: [id])
  facultyID String     @db.ObjectId
}
